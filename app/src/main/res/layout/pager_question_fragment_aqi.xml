<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:weightSum="1">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• The AQI is an index for reporting daily air quality."
        android:id="@+id/textView"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:layout_marginTop="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• It tells you how clean or polluted your air is, and what associated health effects might be a concern for you."
        android:id="@+id/textView2"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:singleLine="false"
        android:layout_weight="0.11"
        android:layout_marginTop="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• AQI Table"
        android:id="@+id/textView8"
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_marginTop="2dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="195dp"
        android:id="@+id/iv_aqi_desciption"
        android:background="@drawable/aqi_description_small"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• we express this table using emoticons"
        android:id="@+id/textView5"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="285dp"
            android:layout_height="30dp"
            android:id="@+id/imageView3"
            android:background="@drawable/all_emoticons" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/textView16"
                android:textSize="15dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:textSize="15dp"
                android:gravity="center_horizontal"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:id="@+id/textView18"
                android:textSize="15dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="21dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView19"
                android:textSize="15dp"
                android:gravity="center_horizontal"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:id="@+id/textView20"
                android:textSize="15dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:textSize="15dp"
                android:gravity="center_horizontal"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                android:id="@+id/textView22"
                android:textSize="15dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView23"
                android:textSize="15dp"
                android:gravity="center_horizontal"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:id="@+id/textView24"
                android:textSize="15dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView25"
                android:textSize="15dp"
                android:gravity="center_horizontal"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:id="@+id/textView26"
                android:textSize="15dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~"
                android:id="@+id/textView27"
                android:textSize="15dp"
                android:textColor="#000000" />
        </LinearLayout>
    </TableRow>

</LinearLayout>