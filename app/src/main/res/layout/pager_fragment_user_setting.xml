<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="10dp"
    android:background="@drawable/boarder"
    android:weightSum="1">

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btn_go_to_first"
        android:layout_gravity="left"
        android:background="@drawable/go_to_first_page"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:id="@+id/scrollView4"
        android:layout_weight="0.47"
        android:visibility="visible">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boarder"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Info"
                    android:id="@+id/textView11"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email : "
                        android:id="@+id/textView12"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_User_Email"
                        android:textSize="30dp"
                        android:layout_weight="0.95"
                        android:gravity="center_horizontal"
                        android:enabled="false" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boarder"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google"
                    android:id="@+id/textView10"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Circle Size : "
                        android:id="@+id/textView28"
                        android:textSize="25dp"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:layout_weight="0.2" />

                    <EditText
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_Google_Circle_Size"
                        android:layout_weight="0.8"
                        android:numeric="decimal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boarder"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Realtime Chart"
                    android:id="@+id/textView33"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chart Range : "
                        android:id="@+id/textView34"
                        android:textSize="25dp"
                        android:layout_weight="0.2" />

                    <EditText
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText2"
                        android:layout_weight="0.8"
                        android:numeric="decimal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boarder"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UDOO board"
                    android:id="@+id/textView31"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receive Time : "
                        android:id="@+id/textView32"
                        android:textSize="25dp"
                        android:layout_weight="0.2" />

                    <EditText
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText3"
                        android:layout_weight="0.8"
                        android:numeric="decimal" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="Confirm"
        android:layout_gravity="center_horizontal"
        android:background="#a3a3a3"
        android:layout_marginTop="10dp" />

</LinearLayout>